<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/x-icon" href="/favicon.ico"/>
    <!-- Toastify css-->
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <!--Google Fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap" rel="stylesheet">
    <!--Tailwind css-->
    <link href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css" rel="stylesheet">
    <!--Main css-->
    <link rel="stylesheet" href="/css/app.css">
    <title>Pizza App</title>
</head>
<body>

    <nav class="container mx-auto flex items-center justify-between py-4">
        <div>
            <a href="/"><img src="/img/logo.png" alt="logo"></a>
        </div>
        <div>
            <ul class="flex items-center">
                <li class="ml-6"><a href="/">Menu</a></li>
                <li class="ml-6"><a href="#">Offers</a></li>
                <% if(!user) { %> 
                <li class="ml-6"><a href="/register">Register</a></li>
                <li class="ml-6"><a href="/login">Login</a></li>
                <% } else { %> 
                <li class="ml-6">
                    <form id="logout" action="/logout" method="POST">
                        <a onclick="document.getElementById('logout').submit()"
                        href="#">logout</a>
                    </form> 
                </li>
                <% } %>
                <li class="ml-6"><a href="/cart" 
                    class="inline-block px-4 py-2 rounded-full flex items-center">
                    <span id="cartCounter" class="text-white font-bold pr-2">
                    <%= session.cart ? session.cart.totalQty : '' %></span>
                    <img src="/img/cart.png" alt=""></a>
                </li>
            </ul>
        </div>
    </nav>
    <%- body %> 

     <!--Toastify js-->
     <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
     <!--Main js-->
    <script src="/js/app.js"></script>
</body>
</html>
