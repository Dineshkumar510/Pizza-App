<section class="status">
    <div class="container mx-auto">
        <div class="status-box w-full lg:w-2/3 mx-auto">
            <div class="flex items-center jsutify-between mb-12">
                <h1 class="text-xl font-bold">Track Delivery Status:</h1>
                <h6 class="relative ml-auto bg-white float-right py-1 rounded-full px-4 text-green-600 text-s"><%=
                    order._id %></h6>
            </div>

            <input id="hiddenInput" type="hidden" value="<%= JSON.stringify(order)%>">

            <ul>
                <li class="status_line text-sm md:text-xl pb-16" data-status="Order_Placed">
                    <span>Order Placed</span>
                </li>

                <li class="status_line text-sm md:text-xl pb-16" data-status="confirmed">
                    <span>Order Confirmation</span>
                </li>

                <li class="status_line text-sm md:text-xl pb-16" data-status="prepared">
                    <span>Food Preparation</span>
                </li>

                <li class="status_line text-sm md:text-xl pb-16" data-status="delivered">
                    <span>Out of Delivery</span>
                </li>

                <li class="status_line text-sm md:text-xl" data-status="completed">
                    <span>Complete</span>
                </li>

            </ul>
        </div>
    </div>
</section>